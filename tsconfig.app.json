{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "resources/js/src/**/*",
        "resources/js/src/**/*.vue",
        "resources/js/src/**/*.d.ts"

    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "allowJs": true,
        "paths": {
            "@/*": [
                "./resources/js/src/*"
            ]
        }
    }
}
