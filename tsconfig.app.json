{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "resources/js/src/**/*",
        "resources/js/src/**/*.vue",
        "resources/js/src/**/*.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "allowJs": true,        // разрешаем импортировать js файлы. Если false - требует создать файл деклараций .d.ts
        //        "jsx": "preserve",
        "paths": {
            "@/*": [
                "./resources/js/src/*"
            ],
            "@/types/*": [
                "./resources/js/src/app/types/*"
            ],
            "@/types": [
                "./resources/js/src/app/types"
            ]
            // Опционально, если нужно импортировать из подпапок @/types
        }
    }
}

