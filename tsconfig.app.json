{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "resources/js/src/**/*",
        "resources/js/src/**/*.vue",
        "resources/js/src/**/*.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "strict": true,
        "noEmit": true,

        "module": "ESNext",
        "target": "ESNext",

        "lib": [
            // Target ES2020 to align with Vite.
            // <https://vitejs.dev/config/build-options.html#build-target>
            // Support for newer versions of language built-ins are
            // left for the users to include, because that would require:
            //   - either the project doesn't need to support older versions of browsers;
            //   - or the project has properly included the necessary polyfills.
            "ESNext",
            "DOM",
            "DOM.Iterable"

            // No `ScriptHost` because Vue 3 dropped support for IE
        ],

        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "allowJs": true,        // разрешаем импортировать js файлы. Если false - требует создать файл деклараций .d.ts
        //        "jsx": "preserve",
        "paths": {
            "@/*": [
                "./resources/js/src/*"
            ],
            "@/types/*": [
                "./resources/js/src/app/types/*"
            ],
            "@/types": [
                "./resources/js/src/app/types"
            ]
            // Опционально, если нужно импортировать из подпапок @/types
        }
    }
}

